<head data-hook="inside_head">
  <meta charset="utf-8" />
  <script type="text/javascript" src="https://beta.engage360.co/api/static/js/e360comm.js"></script>
  <%= render :partial => 'spree/shared/head' %>
  <%= render :partial => 'spree/shared/google_analytics_async' %>
  <%= twitter_card %>
  <%= opengraph %>
  <meta property=”og:site_name” content=”ReserveBar”/>
  <meta name="bitly-verification" content="eeb2823bcf6f"/>
</head>

<body>
  <div id="fb-root"></div>
  <script>
    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=416911481660452";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>

  <% if controller.controller_name == 'orders' %>
    <% if controller.action_name == 'edit' %>
      <% if current_user.present? %>
        <% @order.update_attributes(user_id: current_user.id) %>
      <% end %>
    <% elsif controller.action_name == 'show' %>
      <script>
        $(function(){
          if (e360comm.isInApp) {
            $('#back-to-app').show();
            $('#back-to-app').click(function(){
              e360.doCallback('GoNext'); // purchase is done, app may proceed
            });
          }
        });
      </script>
      <% if flash[:commerce_tracking] %>
        <% h = Hash.new %>
        <% @order.line_items.map { |li| h[li.product.sku] = li.quantity } %>
        <script>
          e360comm.reserveBar(
            'd34cf682-e9f1-4ab7-af46-4d9c1b2942a9',
            '<%= session[:wristband_id] %>',
            <%= session[:event_id] %>,
            <%= h.to_json.html_safe %>
          );
        </script>
      <% end %>
    <% end %>
  <% elsif controller.controller_name == 'checkout' && controller.action_name == 'edit' %>
    <% if @order.state == 'address' %>
      <script>
        $(function(){
          $('#order_ship_address_attributes_firstname').val('<%= session[:first_name] %>')
          $('#order_ship_address_attributes_lastname').val('<%= session[:last_name] %>')
          $('#order_ship_address_attributes_zipcode').val('<%= session[:billing_zip] %>')
          $('#order_ship_address_attributes_phone').val('<%= session[:billing_phone] %>')
        });
      </script>
    <% elsif @order.state == 'payment' %>
      <script>
        $(function(){
          $('#name_on_card').val('<%= "#{session[:first_name]} #{session[:last_name]}" %>')
        });
      </script>
    <% end %>
  <% end %>

  <div id='back-to-app'>
    DONE
  </div>

  <div style="background-color:#000000;<%= "text-align:center;".html_safe if @not_checkout %>">
    <div style="vertical-align:top;padding:0;margin:0;width:100%;line-height:0px;text-align:center;">
      <% if controller.action_name == 'index' %>
        <img src="https://www.reservebar.com/spree/uploads/2242/original/firstPage_01.jpg?1441261308" alt="Rémy Martin Collection">
      <% else %>
        <img src="https://www.reservebar.com/spree/uploads/2247/original/header_01.jpg?1441261361" alt="Rémy Martin Logo">
      <% end %>
    </div>

    <div style="background:url(https://www.reservebar.com/spree/uploads/2298/original/Remy_headerBar.png?1442442134) no-repeat;padding:10px 0px;text-align:center;">
      <h1 style="font-family:RemyMartin,sans-serif;color:#c4af74;font-weight:normal;font-style:italic;font-size:18px;line-height:18px;">#HeartOfCognac</h1>
    </div>

    <% if @not_checkout %>
      <%= yield %>
    <% else %>
      <div class="container">
        <% unless (session[:age_gate] == 'passed' || request.path.include?('/pages/age_restriction')) %>
          <% if session[:enable_age_gate] && (Spree::Config[:use_age_gate_on_all_pages] || Spree::AgeGate.apply_for_path?(request.path)) %>
            <%= render :partial => 'spree/age_gate/modal_form' %>
          <% end %>
        <% end %>

        <div id="wrapper" class="row" data-hook>
          <% if content_for?(:sidebar) %>
          <aside id="sidebar" class="columns alpha four" data-hook>
            <%= yield :sidebar %>
          </aside>
          <% end %>

          <div id="content" class="columns omega <% if !content_for?(:sidebar) %> sixteen alpha <% else %> twelve <% end %>" data-hook>
            <%= flash_messages %>
            <%= yield %>
          </div>

        </div>
      </div>
    <% end %>

    <div style="text-align:center;line-height:0px;padding:70px 0px;">
      <img src="https://www.reservebar.com/spree/uploads/2245/original/footer_01.png?1441261341" alt="Powered by ReserveBar">
      <br>
      <img src="https://www.reservebar.com/spree/uploads/2246/original/footer_02.png?1441261350" alt="ReserveBar.com">
    </div>

    <% if controller.action_name == 'index' %>
      <div style="text-align:center;padding:30px 40px 60px 40px;margin:0;">
        <h1 style="font-family:RemyMartin,sans-serif;color:#e8d089;font-weight:normal;font-size:12px;line-height:14px;">© 2015 E. Rémy Martin & Co., Imported by Rémy Cointreau USA, Inc., New York, NY.  All rights reserved, trademarks owned by E. Rémy Martin & Co.<br>PLEASE DRINK RESPONSIBLY.</h1>
      </div>
    <% end %>
  </div>

